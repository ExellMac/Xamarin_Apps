<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ferreteria.Details">

    <ContentPage.Content>
    <ScrollView>
        <StackLayout BackgroundColor="#1B2026">
            <Frame BackgroundColor="Transparent" HorizontalOptions="Fill" VerticalOptions="Fill" IsClippedToBounds="True"> 
                <Image Source="Logo" WidthRequest="300" Aspect="AspectFill" ></Image>
            </Frame>

            <BoxView BackgroundColor="White" HeightRequest="2" Margin="0,-40,0,0" ></BoxView>

            <Label Text="¡Todo lo que necesitas, lo encuentras en nuestra ferretería!"
                   Margin="0,10"  HorizontalTextAlignment="Center"  FontAttributes="Italic"
                   TextColor="White" FontSize="18"/>

            
            <Frame BackgroundColor="red" Padding="-15" Margin="15" IsClippedToBounds="True" CornerRadius="30" BorderColor="White"> 
                <Image Source="workshop" WidthRequest="200"  Aspect="AspectFill"></Image>
            </Frame>

        </StackLayout>
    </ScrollView>
    </ContentPage.Content>
    
</ContentPage>
